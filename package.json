{
  "name": "invoice-dispute-copilot",
  "private": true,
  "version": "0.1.0",
  "description": "Invoice Dispute Copilot monorepo (RAG + Workflow, TypeScript)",
  "packageManager": "npm@10",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "gen:openapi": "openapi-typescript apps/api/openapi.yaml -o apps/web/src/api/openapi-types.ts",
    "gen:graphql": "graphql-codegen --config apps/web/codegen.ts",
    "gen:api": "npm run gen:openapi && npm run gen:graphql"
  },
  "devDependencies": {
    "turbo": "^1.12.4",
    "typescript": "^5.6.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "openapi-typescript": "^6.7.0",
    "@graphql-codegen/cli": "^5.0.0",
    "graphql": "^16.9.0"
  }
}
